block variables
	-var title = 0
	
doctype html
html(lang="ru")
	head
		title #{title}
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel="stylesheet", href="../css/style.css")
		link(rel="stylesheet", href="../css/media.css")
		link(rel="icon", type="image/x-icon", href="../img/favicon.ico")
	body
		header
			div.container
				div.header_content
					h1  #{title}
					img(src="../img/logo.png")

		main
			section.sign_in
				div.container
					div.sign_in_content
						h2.
							Пользователь:
							#[span username] 
				section.form
					div.container
						block main_form
						
							
							

		footer

